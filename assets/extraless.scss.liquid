/* The Modal (background) */
.menu-modal {
  display: none; /* Hidden by default */
  position: fixed; /* Stay in place */
  left: 0;
  top: 74px;
  width: 100%; /* Full width */
  height: calc(100vw - 74px); /* Full height */
  background-color: rgb(0,0,0); /* Fallback color */
  background-color: rgba(0,0,0,0.4); /* Black w/ opacity */
}

/* Modal Content/Box */
.menu-modal-content {
  background-color: white;
  padding: 0;
  left: 0;
  position:relative;
  width: 50%;
  height: 100%;
}

.menu-modal-close {
  display: none;
}

.menu-modal-items {
  width: fit-content;
  margin: 0 auto;
  top: 30%;
  position: relative;
  display: block;
  text-transform: capitalize;
}

.extra-height {
  height: 74px;
  width: 100%;
}

.icon-15 {
  width: 15px;
  height: 15px;
}
